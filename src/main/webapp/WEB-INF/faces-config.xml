<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.3" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
                                  
	<navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Teacher</from-outcome>
            <to-view-id>/teacher_landingpage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Student</from-outcome>
            <to-view-id>/course_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/course_list.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>create_course</from-outcome>
            <to-view-id>/create_course.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>project_list</from-outcome>
            <to-view-id>/course_project_list.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/course_project_list.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>create_project</from-outcome>
            <to-view-id>/create_project.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>project_info</from-outcome>
            <to-view-id>/project_description.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/create_course.xhtml</from-view-id>
        <navigation-case>
        	<from-outcome>course_list</from-outcome>
            <to-view-id>/course_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/create_project.xhtml</from-view-id>
        <navigation-case>
        	<from-outcome>project_list</from-outcome>
            <to-view-id>/course_project_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/change_account_settings.xhtml</from-view-id>
        <navigation-case>
        	<from-outcome>teacher_landing_page</from-outcome>
            <to-view-id>/teacher_landingpage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
        	<from-outcome>student_landing_page</from-outcome>
            <to-view-id>/course_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/ip_list.xhtml</from-view-id>
        <navigation-case>
        	<from-outcome>added</from-outcome>
            <to-view-id>/ip_list.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>