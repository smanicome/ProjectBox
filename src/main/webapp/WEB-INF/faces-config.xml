<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.3" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd">
                                  
	<navigation-rule>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Teacher</from-outcome>
            <to-view-id>/teacher_landingpage.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Student</from-outcome>
            <to-view-id>/course_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/course_list.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>create_course</from-outcome>
            <to-view-id>/create_course.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
        	<from-outcome>Project</from-outcome>
            <to-view-id>/course_project_list.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>course</name>
                    <value>#{courseList.selectedCourse.code}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/create_course.xhtml</from-view-id>
        <navigation-case>
            <to-view-id>/teacher_course_list.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/course_project_list.xhtml</from-view-id>
        <navigation-case>
        	<from-outcome>Description</from-outcome>
            <to-view-id>/project_description.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>project</name>
                    <value>#{courseProjectList.selectedProject.id}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>create_project</from-outcome>
            <to-view-id>/create_project.xhtml</to-view-id>
            <redirect include-view-params="true">
                <redirect-param>
                    <name>course</name>
                    <value>#{courseProjectList.courseCode}</value>
                </redirect-param>
            </redirect>
        </navigation-case>
    </navigation-rule>
</faces-config>